{
	"name": "dulivu/irbis",
	"description": "Micro-Framework MVC",
	"keywords": ["mvc", "framework", "irbis"],
	"license": "GPL-3.0-only",
	"authors": [
		{
			"name": "Jorge Luis Quico",
			"email": "jorge.quico@cavia.io"
		}
	],
	"require": {
        "php": ">=8.0",
        "ext-pdo": "*",
        "ext-json": "*"
    },
	"require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.6",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
	"autoload": {
        "psr-4": {
            "Irbis\\": "src/"
        }
    },
	"autoload-dev": {
        "psr-4": {
            "Irbis\\Tests\\": "tests/"
        }
    },
	"scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "analyze": "phpstan analyse src --level=8",
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "cs-fix": "php-cs-fixer fix",
        "quality": [
            "@analyze",
            "@cs-check",
            "@test"
        ]
    }
}
